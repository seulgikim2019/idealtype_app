<?xml version="1.0" encoding="utf-8"?>

<!-- 다른 사람 프로필을 눌렀을 때 나오는 페이지..-->

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="0.6">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/pic_show"
            android:layout_width="700px"
            android:layout_height="700px"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/nick_show"
            android:gravity="center"
            android:layout_width="800px"
            android:layout_height="80px"
            android:text="닉네임"
            android:background="#FFFFFF"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gender_show"
                android:layout_width="112dp"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="성별" />

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/age_show"
                android:layout_width="112dp"
                android:layout_height="80px"
                android:background="@drawable/border"
                android:text="나이" />


            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/height_show"
                android:layout_width="112dp"
                android:layout_height="80px"
                android:background="@drawable/border"
                android:text="키" />
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/map" />

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/region_show"
                android:layout_marginLeft="10dp"
                android:layout_width="112dp"
                android:layout_height="80px"
                android:background="@drawable/border"
                android:text="지역" />

        </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/work"/>

        <TextView
            android:id="@+id/job_show"
            android:layout_width="116dp"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="직업" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/smoke"/>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:id="@+id/smoke_show"
            android:layout_width="112dp"
            android:layout_height="80px"
            android:background="@drawable/border"
            android:text="흡연" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="112dp"
            android:layout_height="80px"
            android:text="대화신청하기->" />

        <ImageView
            android:id="@+id/conver_show"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/conversation"
            android:clickable="true"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>